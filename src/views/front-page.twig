						<p class="h3 text--grey">{{ student.title }} <a href="http://{{ student.portfolio_url }}" class="portfolio-url" target="_blank"> {{ student.portfolio_url }}</a></p>
						<p class="project-name">{{ student.project_name }}</p>
					</div>
					<div class="bio">
